# Database Configuration
DATABASE_URL=postgres://postgres:postgres@127.0.0.1:5432/sidewalk

# Payload CMS Configuration
PAYLOAD_SECRET=your-secret-key-here

# IMPORTANT: Set this to your actual production URL (e.g., https://yourdomain.com)
# DO NOT use localhost in production!
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000

# Email Configuration (Gmail SMTP)
GMAIL_USER=admin@sidewalks.co.nz
GMAIL_APP_PASSWORD=your-gmail-app-password

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=admin@sidewalks.co.nz
SMTP_PASSWORD=your-smtp-password

# Rybbit Integration
RYBBIT_SITE_ID=5

# Cloudflare R2 Storage Configuration
R2_BUCKET=sidewalk-media
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
